<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".loginRegister.Register">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="125dp" android:id="@+id/iv_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" android:layout_marginStart="50dp" android:layout_marginEnd="50dp"/>
    <TextView
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_register"
            app:layout_constraintEnd_toEndOf="@+id/iv_register"
            app:layout_constraintStart_toStartOf="@+id/iv_register"
            app:layout_constraintTop_toBottomOf="@+id/iv_register" android:layout_marginTop="20dp"
            android:textSize="24sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email_register" app:layout_constraintEnd_toEndOf="@+id/iv_register"
            app:layout_constraintTop_toBottomOf="@+id/tv_register"
            app:layout_constraintStart_toStartOf="@+id/iv_register" android:layout_marginTop="35dp"
            android:hint="E - mail" android:minHeight="48dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_username_register" android:hint="Username"
            app:layout_constraintTop_toBottomOf="@+id/et_email_register" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/et_email_register"
            app:layout_constraintStart_toStartOf="@+id/et_email_register" android:minHeight="48dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password_register" app:layout_constraintTop_toBottomOf="@+id/et_username_register"
            app:layout_constraintEnd_toEndOf="@+id/et_username_register"
            app:layout_constraintStart_toStartOf="@+id/et_username_register" android:layout_marginTop="20dp"
            android:hint="Password" android:minHeight="48dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_repeat_password_register" android:hint="Repeat password"
            app:layout_constraintTop_toBottomOf="@+id/et_password_register"
            app:layout_constraintEnd_toEndOf="@+id/et_password_register"
            app:layout_constraintStart_toStartOf="@+id/et_password_register" android:layout_marginTop="20dp"
            android:minHeight="48dp"/>
    <Button
            android:text="Log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_go_to_login"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" android:layout_marginBottom="35dp"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_ok_register"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/button_go_to_login"
            android:layout_marginEnd="35dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>